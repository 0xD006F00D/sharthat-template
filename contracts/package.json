{
	"name": "sharthat-contracts",
	"version": "0.0.1",
	"scripts": {
		"chain": "hardhat node --network hardhat --no-deploy",
		"compile": "hardhat compile",
		"clean": "hardhat clean",
		"dodoc": "hardhat dodoc",
		"export": "hardhat export --export-all ../frontend/src/lib/common/contractsAbi.json",
		"deploy": "hardhat deploy --export-all ../frontend/src/lib/common/contractsAbi.json",
		"deploy:network": "$npm_execpath run deploy -- --tags production --network",
		"verify:network": "hardhat etherscan-verify --network",
		"test": "hardhat test --network hardhat",
		"coverage": "hardhat coverage --network hardhat"
	},
	"devDependencies": {
		"@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.13",
		"@nomiclabs/hardhat-etherscan": "^3.0.3",
		"@nomiclabs/hardhat-waffle": "^2.0.3",
		"@openzeppelin/contracts": "^4.6.0",
		"@primitivefi/hardhat-dodoc": "^0.2.3",
		"chai": "^4.3.6",
		"dotenv": "^16.0.1",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.3.0",
		"ethereum-waffle": "^3.4.4",
		"ethers": "^5.6.5",
		"hardhat": "^2.9.3",
		"hardhat-deploy": "^0.11.4",
		"hardhat-gas-reporter": "^1.0.8",
		"prettier": "^2.5.1",
		"prettier-plugin-solidity": "^1.0.0-beta.19",
		"solhint": "^3.3.7",
		"solidity-coverage": "^0.7.21"
	}
}
